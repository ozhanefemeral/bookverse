generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
}

model users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  image     String
  createdAt DateTime @default(now())

  favoriteBooks books[]
  favoriteAuthors authors[]
}

model books {
  id        Int      @id @default(autoincrement())
  title     String
  image     String
  year      Int
  createdAt DateTime @default(now())

  favoritedBy users[]
  authors     authors[]
}

model authors {
  id        Int      @id @default(autoincrement())
  name      String
  image     String
  slug      String  @unique
  createdAt DateTime @default(now())

  books books[]
  favoritedBy users[]
}